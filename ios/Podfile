# Standard Flutter Podfile
platform :ios, '15.0'

# Dynamically find the Flutter SDK podhelper
# This ensures we use the version matching the runner's Flutter version
flutter_root = ENV['FLUTTER_ROOT']
if flutter_root.nil? || flutter_root.empty?
  # Fallback for local detection if needed
  podhelper_path = File.expand_path(File.join('..', 'Flutter', 'podhelper'), __FILE__)
else
  podhelper_path = File.join(flutter_root, 'packages', 'flutter_tools', 'bin', 'podhelper')
end

if File.exist?("#{podhelper_path}.rb")
  require podhelper_path
else
  # Ultimate fallback
  require_relative 'Flutter/podhelper' if File.exist?('Flutter/podhelper.rb')
end

target 'Runner' do
  use_frameworks!
  use_modular_headers!

  flutter_install_all_ios_pods File.dirname(File.realpath(__FILE__))
end

post_install do |installer|
  installer.pods_project.targets.each do |target|
    flutter_additional_ios_build_settings(target)
    
    target.build_configurations.each do |config|
      config.build_settings['IPHONEOS_DEPLOYMENT_TARGET'] = '15.0'
      config.build_settings['SWIFT_VERSION'] = '5.0'
    end
  end
end
